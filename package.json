{
  "name": "directus-extension-stripe-bundle",
  "version": "2.0.0-alpha.1",
  "type": "module",
  "author": {
    "name": "Pawe≈Ç Romanowski",
    "url": "https://pawel-romanowski.pl/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nexthis/directus-stripe"
  },
  "keywords": [
    "typescript",
    "plugin",
    "stripe",
    "directus",
    "directus-extension",
    "directus-custom-bundle"
  ],
  "description": "Receive payments on your Directus commerce application using Stripe.",
  "icon": "extension",
  "directus:extension": {
    "host": "^10.1.11",
    "type": "bundle",
    "path": {
      "app": "dist/app.js",
      "api": "dist/api.js"
    },
    "entries": [
      {
        "type": "operation",
        "name": "create-product",
        "source": {
          "app": "src/create-product/app.ts",
          "api": "src/create-product/api.ts"
        }
      },
      {
        "type": "operation",
        "name": "create-customer",
        "source": {
          "app": "src/create-customer/app.ts",
          "api": "src/create-customer/api.ts"
        }
      },
      {
        "type": "operation",
        "name": "create-coupon",
        "source": {
          "app": "src/create-coupon/app.ts",
          "api": "src/create-coupon/api.ts"
        }
      },
      {
        "type": "operation",
        "name": "generate-payment-link",
        "source": {
          "app": "src/generate-payment-link/app.ts",
          "api": "src/generate-payment-link/api.ts"
        }
      },
      {
        "type": "hook",
        "name": "hook",
        "source": "src/hook/index.ts"
      },
      {
        "type": "endpoint",
        "name": "endpoint",
        "source": "src/endpoint/index.ts"
      }
    ]
  },
  "scripts": {
    "build": "directus-extension build",
    "dev": "directus-extension build -w --no-minify",
    "link": "directus-extension link",
    "add": "directus-extension add",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "stripe": "^13.8.0"
  },
  "devDependencies": {
    "@directus/extensions-sdk": "10.3.1",
    "@directus/types": "^11.0.4",
    "@types/node": "^20.11.19",
    "typescript": "^5.3.3",
    "vitepress": "^1.0.0-rc.42",
    "vue": "^3.4.19"
  }
}
